{
  "name": "starships",
  "private": true,
  "version": "2.1.0",
  "description": "",
  "engines": {
    "node": "22.x",
    "pnpm": "10.10.0"
  },
  "packageManager": "pnpm@10.10.0",
  "pnpm": {
    "neverBuiltDependencies": []
  },
  "devDependencies": {
    "jiti": "^2.6.1"
  },
  "scripts": {
    "dev": "STAGE=development pnpm --filter \"./{packages,apps}/**\" --parallel dev",
    "build": "pnpm --filter \"./packages/builder/**\" build --stage production",
    "dev:prepare": "pnpm --filter \"./packages/builder/**\" build --stage prepare",
    "clean": "find . -type d \\( -name dist -o -name '@mf-types' \\) ! -path '*/node_modules/*' -exec rm -rf {} + 2>/dev/null || true",
    "typecheck": "pnpm --filter \"./{packages,apps}/**\" --parallel typecheck",
    "lint": "pnpm --filter \"./{packages,apps}/**\" --parallel lint",
    "lint:fix": "pnpm --filter \"./{packages,apps}/**\" --parallel lint:fix"
  }
}
